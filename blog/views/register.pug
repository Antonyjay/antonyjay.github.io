	body
		nav
			.nav-wrapper
				a.brand-logo.left(href='/') lekker blogje
				ul#nav-mobile.right
					li
						a(href='/') Login
		
		h2 If you want an account you need to register!
		h4
			div.row
				div.col.s6.offset-s3
				
						div.card.darken-1
							div.card-content.white-text
								form(action='/registration' method='post')
										input#firstname(name='firstname' placeholder= 'firstname' type='text' required)
										br
										input#email(name='email' type= 'email' placeholder='email' required)
										br
										input#password(name='password' placeholder= 'password' type='password' required)
										br
										input#submitbutton.btn.waves-effect.waves(type='submit')
