html
	head
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css')
		link(rel='stylesheet', href='/src/css/hover.css/css/hover-min.css')
		link(rel='stylesheet', href='/src/css/main.css', type='text/css')
		script.

			$(document).ready(function () {
				$('#submit').click(function(event) {
					if($('#email').val().trim().length === 0 || $('#password').val().trim().length === 0) {
						event.preventDefault();
						$('#error-message').html("You didn't fill everyting in, come on man..")
					}
				})
			})
	body
		nav
			.nav-wrapper
				a.brand-logo.left(href='/') Fijn blogje
				ul#nav-mobile.right
					li
						a(href='/ownposts') View my posts
					li
						a(href='/allposts') View all posts
					li
						a(href='/profile') Make a Post	

		if user
			div.row
				div.col.s6.offset-s3
					h1.hvr-bounce-in.maintext Pick something, don't just do nothing!
					
		else
			div.row
				div.col.s9.offset-s1
					h1 Login! or 
						a.hvr-buzz(href='/register') register </a> to post awesome things!
				div.col.s6.offset-s3
					div.card.darken-1
							div.card-content.white-text
								form(action='/login' method='post')
								
									input#email(name='email' placeholder='email' required)
									br
									input#password(name='password' placeholder = 'password' type= 'password' required)
									input#submitbutton.btn.waves-effect.waves(type='submit')
					h2#error-message= message
