doctype html
head
	- var title = "Welcome"
	include ./templates/head.pug


	body

		header
			div.ui.top.fixed.menu.huge
				div
					a.item Home
				div.right.menu
					a.item Map
					a.item Requests
		
		main
			div.introduction
				div.ui.container.welcomingtext
					h1 CIRCLY
					p Find your pearls from the street here!

			div.information
				div.ui.container
					div.ui.grid
						div.ten.wide.column
							div.ui.two.column.doubling.stackable.grid
								div.column
									h3 About

									p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
						div.four.wide.column
							h3 Login
							form(class= "ui form" method="post" action="/login")
								.field
									label User name
									input(type='text', name='login_username', placeholder='Username')
								.field
									label Password
									input(type='password', name='login_password', placeholder='Password')
								.field
								button.ui.button(type='submit' action="login") Login
								a(href="/register") or register here

								p #{message}




		footer
			include ./templates/footer.pug
						
			
			

		include ./templates/scripts.pug

